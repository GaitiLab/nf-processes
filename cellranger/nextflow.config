params {

fastq_pattern = '*_R{1,2}*.fastq.gz'
input_dir = '.input/'
output_dir = './results'
transcriptome_ref = ''
sample_sheet = ''
include_introns = true
}


profiles {
  slurm_h4h {
      process {
          executor='slurm'
          time = '4h'
          memory = '65GB'
          queue = 'veryhighmem'
          clusterOptions = '--job-name=cellranger_count'
       }
   }
  standard {
     executor='local'
     cpus = 8
     memory = '64G'
  }
}
