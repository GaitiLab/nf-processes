params {

input_pattern = './input/*_R{1,2}*.fastq.gz'
multiqc = true
output_dir = './results'
multiqc_title = "MultiQC_Output"
tracedir = "${params.output_dir}/pipeline_info"

}


profiles {
  slurm_h4h {
      process {
          executor='slurm'
          time = '24h'
          memory = '128GB'
          cpus = 8
          queue = 'veryhimem'
          clusterOptions = '--job-name=fastqc-multiqc'
       }
   }
  standard {
     executor='local'
     cpus = 8
     memory = '128G'
  }
}
