      process {
          executor='slurm'
          time = '24h'
          memory = '128GB'
          cpus = 8
          queue = 'veryhimem'
          clusterOptions = '--job-name=splitpipe_pb'
       }
   }
  standard {
     executor='local'
     cpus = 8
     memory = '128G'
  }
}
