params {

input_dir = './fastq/'
output_dir = './results/'
merge_fastqs = true
params.recursive_search = false
ref = ''
sample_list = ''
kit = 'WT'
mode = 'all'
sublibrary = ''
combine = true
fastq_pattern = '*_R{1,2}*.fastq.gz'
}


profiles {
  slurm_h4h {
      process {
          executor='slurm'
          time = '24h'
          cpus = 8
          withLabel: splitpipe {

            module = 'ParseBiosciences/0.9.6p'
            memory = '128GB'
            queue = 'veryhimem'
            clusterOptions = '--job-name=splitpipe-pb'
            
          }
       }
   }
  standard {
     executor='local'
     cpus = 8
     memory = '128G'
  }
}
