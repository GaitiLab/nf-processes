params {

// boilerplate parameters

input_dir = '.input/'
output_dir = './results'
recursive_search = false

cellranger.fastq_pattern = '*_R{1,2}*.fastq.gz'
cellranger.sample_name_split = '_S'
cellranger.ref = null
cellranger.sample_sheet = null
cellranger.include_introns = true
cellranger.expected_cells = 3000
}


profiles {
  slurm_h4h {
      process {
          executor='slurm'
          time = '12h'
          memory = '65GB'
          cpus = 8
          queue = 'veryhimem'
          clusterOptions = '--job-name=cellranger_count'
          withLabel: cellranger {
            module = 'cellranger'
          }
       }
   }
  standard {
     executor='local'
     cpus = 8
     memory = '64G'
  }
}
